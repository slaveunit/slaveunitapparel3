<div class="product-index col-lg-4">
	<a href="/products/<%= product.id %>" target="_blank"><h2><%= product.name %></h2></a>
	<a href="/products/<%= product.id %>" target="_blank"><%= image_tag (product.photo), :style => "margin: auto", :class => "img-responsive" %></a>
	<a href="/products/<%= product.id %>" target="_blank"><p><%= product.description %></p></a>
	<p>COLOR:<%= product.colour %></p>
	<p>SIZE:<%= product.size %></p>
	<% if signed_in? && current_user.admin? %>
		<%= link_to 'Show', product %>
		<%= link_to 'Edit', edit_product_path(product) %>
		<%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
	<% end %>
</div>