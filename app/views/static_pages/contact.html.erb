<div class="contact-wrapper">

	<div class="contact-inner">

	  	<div class="contact-logo" id="contact-logo">
            <a href="/" alt="logo"><%= image_tag("logo-big-no-border.jpg", :class => "img-responsive") %></a>
        </div>

		<div class="contact-paragraph visible-lg-block visible-md-block">
			<h2>CONTACT</h2>
			<h3>EMAIL:</h3>
			
<!-- EMAIL FORM -->
			<%= flash[:notice] %>
			<%= form_tag("/static_pages/thank_you") do %>
				<div class="email-fields">
					<div class="col-md-12">
						<div class="form-group">
							
							<%= text_field_tag :name, nil, class: "form_control", placeholder: "Enter Name" %>
						</div>
						<div class="form-group">
							
							<%= text_field_tag :email, nil, class: "form_control", placeholder: "Enter Email" %>
						</div>
						<div class="form-group">
							
							<%= text_area_tag :message, nil, class: "form_control", placeholder: "Enter Message" %>
						</div>
					</div>
				</div>
			<%= submit_tag "TRANSMIT", :class => 'btn btn-danger contact-button' %>
			<% end %>
<!-- EMAIL FORM -->

			<h3>Follow me on:</h3>
			<a href="http://facebook.com/slav3unit" target="_blank"><%= image_tag ("fb contact.png") %></a>
			<a href="https://www.flickr.com/photos/gracinhamarco/" target="_blank"><%= image_tag ("flickr contact.png") %></a>
			<a href="http://slav3unit.bandcamp.com" target="_blank"><%= image_tag ("bc contact.png") %></a>
		</div>

<!-- MOBILE -->
		<div class="contact-paragraph-sm visible-sm-block visible-xs-block">
			<h2>CONTACT</h2>
			<h3>EMAIL:</h3>
						<%= flash[:notice] %>
			<%= form_tag("/static_pages/thank_you") do %>
				<div class="row">
					<div class="col-md-12">
						<div class="form-group">
							
							<%= text_field_tag :name, nil, class: "form_control", placeholder: "Enter Name" %>
						</div>
						<div class="form-group">
							
							<%= text_field_tag :email, nil, class: "form_control", placeholder: "Enter Email" %>
						</div>
						<div class="form-group">
							
							<%= text_area_tag :message, nil, class: "form_control", placeholder: "Enter Message" %>
						</div>
					</div>
				</div>
			<%= submit_tag "TRANSMIT", :class => 'btn btn-danger contact-button' %>
			<% end %>
			<h3>Follow me on:</h3>
			<a href="http://facebook.com/slav3unit"><%= image_tag ("fb contact.png") %></a>
			<a href="https://www.flickr.com/photos/gracinhamarco/"><%= image_tag ("flickr contact.png") %></a>
			<a href="http://slav3unit.bandcamp.com"><%= image_tag ("bc contact.png") %></a>
		</div>
<!-- END MOBILE -->

	</div><!-- end contact inner -->

</div><!-- end contact wrapper -->
